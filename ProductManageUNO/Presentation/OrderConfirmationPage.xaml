<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ProductManageUNO.Presentation.OrderConfirmationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProductManageUNO.Presentation"
    Background="{ThemeResource BackgroundBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Spacing="24"
                   Padding="32">
            
            <!-- Success Icon -->
            <Border Background="#E8F5E9"
                    CornerRadius="50"
                    Width="100"
                    Height="100"
                    HorizontalAlignment="Center">
                <FontIcon Glyph="&#xE73E;" 
                         FontSize="48" 
                         Foreground="#4CAF50"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
            </Border>

            <!-- Success Message -->
            <TextBlock Text="Đặt hàng thành công!"
                      FontSize="24"
                      FontWeight="Bold"
                      Foreground="{ThemeResource OnSurfaceBrush}"
                      HorizontalAlignment="Center"/>

            <!-- Order Details -->
            <Border Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="12"
                    Padding="24"
                    MinWidth="300">
                <StackPanel Spacing="12">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Text="Mã đơn hàng:"
                                  FontSize="14"
                                  Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                        <TextBlock x:Name="OrderIdText"
                                  Grid.Column="1"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="{ThemeResource PrimaryBrush}"/>
                    </Grid>
                    
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Text="Khách hàng:"
                                  FontSize="14"
                                  Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                        <TextBlock x:Name="CustomerNameText"
                                  Grid.Column="1"
                                  FontSize="14"
                                  FontWeight="SemiBold"
                                  Foreground="{ThemeResource OnSurfaceBrush}"/>
                    </Grid>

                    <Border Height="1" Background="{ThemeResource OutlineVariantBrush}"/>

                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Text="Tổng tiền:"
                                  FontSize="16"
                                  FontWeight="SemiBold"
                                  Foreground="{ThemeResource OnSurfaceBrush}"/>
                        <TextBlock x:Name="TotalAmountText"
                                  Grid.Column="1"
                                  FontSize="18"
                                  FontWeight="Bold"
                                  Foreground="{ThemeResource PrimaryBrush}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Thank You Message -->
            <TextBlock Text="Cảm ơn bạn đã mua hàng!"
                      FontSize="14"
                      Foreground="{ThemeResource OnSurfaceVariantBrush}"
                      HorizontalAlignment="Center"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                <Button x:Name="ViewOrdersButton"
                       Click="ViewOrdersButton_Click"
                       HorizontalAlignment="Center"
                       Background="Transparent"
                       BorderBrush="{ThemeResource PrimaryBrush}"
                       BorderThickness="1"
                       FontSize="16"
                       Padding="24,12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE7BF;" FontSize="18" Foreground="{ThemeResource PrimaryBrush}"/>
                        <TextBlock Text="Xem đơn hàng" FontSize="16" Foreground="{ThemeResource PrimaryBrush}"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="BackToHomeButton"
                       Click="BackToHomeButton_Click"
                       HorizontalAlignment="Center"
                       Style="{ThemeResource AccentButtonStyle}"
                       FontSize="16"
                       Padding="24,12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE80F;" FontSize="18"/>
                        <TextBlock Text="Về trang chủ" FontSize="16"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
