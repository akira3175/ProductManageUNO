<Page
    x:Class="ProductManageUNO.Presentation.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProductManageUNO.Presentation"
    xmlns:models="using:ProductManageUNO.Models"
    mc:Ignorable="d"
    Background="{ThemeResource BackgroundBrush}">

    <Grid RowDefinitions="Auto, Auto, *">
        <!-- Header -->
        <Grid Grid.Row="0" Background="{ThemeResource PrimaryBrush}" Padding="16,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                <TextBlock Text="{Binding Title}" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="{ThemeResource OnPrimaryBrush}"/>

                <TextBlock Text="{Binding TotalItems, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0} sản phẩm'}"
                          FontSize="12"
                          Opacity="0.8"
                          Foreground="{ThemeResource OnPrimaryBrush}"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <!-- Loading indicator nhỏ trong header -->
                <ProgressRing IsActive="{Binding IsLoading}" 
                              Width="24" 
                              Height="24"
                              Foreground="{ThemeResource OnPrimaryBrush}"/>

                <Button Command="{Binding LoadDataCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        ToolTipService.ToolTip="Tải lại">
                    <SymbolIcon Symbol="Refresh" Foreground="{ThemeResource OnPrimaryBrush}"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Search Box -->
        <Grid Grid.Row="1" Padding="16,12" Background="{ThemeResource SurfaceBrush}">
            <TextBox PlaceholderText="🔍 Tìm kiếm sản phẩm, mã vạch, danh mục..."
                     Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Background="{ThemeResource SurfaceVariantBrush}"
                     BorderThickness="0"
                     CornerRadius="8"
                     Padding="12,10"
                     FontSize="14"/>
        </Grid>

        <!-- Product ListView - KHÔNG CÓ LOADING OVERLAY -->
        <ListView Grid.Row="2"
                  ItemsSource="{Binding Products}" 
                  Padding="12,8"
                  SelectionMode="None"
                  IsItemClickEnabled="True">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">
                    <Grid Background="{ThemeResource SurfaceBrush}" 
                          CornerRadius="12" 
                          Margin="4,6"
                          Padding="16,12"
                          BorderBrush="{ThemeResource OutlineVariantBrush}"
                          BorderThickness="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Spacing="6">
                            <TextBlock Text="{x:Bind ProductName}" 
                                      Style="{ThemeResource BodyStrongTextBlockStyle}"
                                      FontSize="16"
                                      Foreground="{ThemeResource OnSurfaceBrush}"
                                      TextWrapping="Wrap"/>

                            <Border Background="{ThemeResource SecondaryContainerBrush}"
                                   CornerRadius="4"
                                   Padding="8,4"
                                   HorizontalAlignment="Left">
                                <TextBlock Text="{x:Bind Category.CategoryName}" 
                                          FontSize="11"
                                          FontWeight="SemiBold"
                                          Foreground="{ThemeResource OnSecondaryContainerBrush}"/>
                            </Border>

                            <Grid ColumnDefinitions="Auto,*,Auto,*" ColumnSpacing="12" RowSpacing="4">
                                <FontIcon Grid.Column="0" 
                                          Glyph="&#xE1E0;" 
                                          FontSize="12" 
                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"/>

                                <TextBlock Grid.Column="1" 
                                          Text="{x:Bind Barcode}" 
                                          FontSize="12"
                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"/>

                                <FontIcon Grid.Column="2" 
                                         Glyph="&#xE7C3;"
                                         FontSize="12"
                                         Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                                <TextBlock Grid.Column="3" 
                                          Text="{x:Bind Unit}" 
                                          FontSize="12"
                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                            </Grid>

                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <FontIcon Glyph="&#xE716;" FontSize="12"
                                         Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                                <TextBlock Text="{x:Bind Supplier.Name}" 
                                          FontSize="11"
                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                          TextTrimming="CharacterEllipsis"
                                          MaxLines="1"/>
                            </StackPanel>
                        </StackPanel>

                        <Border Grid.Column="1" 
                               Background="{ThemeResource TertiaryContainerBrush}"
                               CornerRadius="8"
                               Padding="12,8"
                               VerticalAlignment="Center"
                               MinWidth="100">
                            <StackPanel HorizontalAlignment="Center" Spacing="2">
                                <TextBlock Text="{Binding Price, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0:N0}'}" 
                                          FontSize="18"
                                          FontWeight="Bold"
                                          Foreground="{ThemeResource OnTertiaryContainerBrush}"
                                          HorizontalAlignment="Center"/>
                                <TextBlock Text="VNĐ" 
                                          FontSize="10"
                                          Foreground="{ThemeResource OnTertiaryContainerBrush}"
                                          HorizontalAlignment="Center"
                                          Opacity="0.8"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>

            <ListView.Footer>
                <Grid Height="200" Visibility="{Binding Products.Count, Converter={StaticResource EmptyToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
                        <FontIcon Glyph="&#xE7C4;" FontSize="48" Foreground="{ThemeResource OnSurfaceVariantBrush}" Opacity="0.5"/>
                        <TextBlock Text="Không tìm thấy sản phẩm" 
                                  FontSize="16"
                                  Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                  HorizontalAlignment="Center"/>
                        <Button Content="Tải lại" 
                               Command="{Binding LoadDataCommand}"
                               Style="{ThemeResource AccentButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </ListView.Footer>
        </ListView>
    </Grid>
</Page>
