<Page
    x:Class="ProductManageUNO.Presentation.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProductManageUNO.Presentation"
    xmlns:models="using:ProductManageUNO.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowDefinitions="Auto, *">
        <CommandBar Content="{Binding Title}" Grid.Row="0">
            <AppBarButton Icon="Refresh" Label="Tải lại" Command="{Binding LoadDataCommand}"/>
        </CommandBar>

        <ProgressRing Grid.Row="1" IsActive="{Binding IsLoading}" 
                      HorizontalAlignment="Center" VerticalAlignment="Center" 
                      Width="50" Height="50" Canvas.ZIndex="10"/>

        <ListView Grid.Row="1" ItemsSource="{Binding Products}" Padding="10">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">
                    <Border Background="{ThemeResource SurfaceStrokeColorDefaultBrush}" 
                            CornerRadius="8" Margin="0,5" Padding="12">
                        <Grid ColumnDefinitions="*, Auto">
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="{x:Bind ProductName}" Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                <TextBlock Text="{x:Bind Unit}" Foreground="Gray" FontSize="12"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock Text="{x:Bind Price}" Foreground="Blue" FontWeight="Bold"/>
                                <TextBlock Text="VND" FontSize="10" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
