<Page
    x:Class="ProductManageUNO.Presentation.CartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProductManageUNO.Presentation"
    xmlns:models="using:ProductManageUNO.Models"
    mc:Ignorable="d"
    Background="{ThemeResource BackgroundBrush}">

    <Grid RowDefinitions="Auto, *, Auto">
        <!-- Header -->
        <Grid Grid.Row="0" Background="{ThemeResource PrimaryBrush}" Padding="16,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Background="Transparent"
                    BorderThickness="0"
                    Click="BackButton_Click"
                    ToolTipService.ToolTip="Quay lại">
                <SymbolIcon Symbol="Back" Foreground="{ThemeResource OnPrimaryBrush}"/>
            </Button>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0,0,0">
                <TextBlock Text="{Binding Title}" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="{ThemeResource OnPrimaryBrush}"/>
                <TextBlock Text="{Binding TotalItems, Converter={StaticResource StringFormatConverter}, ConverterParameter='{}{0} sản phẩm'}"
                          FontSize="12"
                          Opacity="0.8"
                          Foreground="{ThemeResource OnPrimaryBrush}"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                <ProgressRing IsActive="{Binding IsLoading}" 
                              Width="24" 
                              Height="24"
                              Foreground="{ThemeResource OnPrimaryBrush}"/>

                <Button Command="{Binding ClearCartCommand}"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTipService.ToolTip="Xóa tất cả"
                        IsEnabled="{Binding IsEmpty, Converter={StaticResource InverseBoolConverter}}">
                    <SymbolIcon Symbol="Delete" Foreground="{ThemeResource OnPrimaryBrush}"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Cart Items List -->
        <ScrollViewer Grid.Row="1" Padding="12,8">
            <StackPanel Spacing="12">
                <!-- Empty State -->
                <Grid Height="400" 
                      Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Spacing="16">
                        <FontIcon Glyph="&#xE7BF;" 
                                 FontSize="72" 
                                 Foreground="{ThemeResource OnSurfaceVariantBrush}" 
                                 Opacity="0.4"/>
                        <TextBlock Text="Giỏ hàng trống" 
                                  FontSize="18"
                                  FontWeight="SemiBold"
                                  Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Hãy thêm sản phẩm vào giỏ hàng" 
                                  FontSize="14"
                                  Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                  HorizontalAlignment="Center"
                                  Opacity="0.7"/>
                        <Button Content="Quay lại mua hàng" 
                               Click="BackButton_Click"
                               Style="{ThemeResource AccentButtonStyle}"/>
                    </StackPanel>
                </Grid>

                <!-- Cart Items -->
                <ItemsControl ItemsSource="{Binding CartItems}"
                             Visibility="{Binding IsEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:CartItem">
                            <Border Background="{ThemeResource SurfaceBrush}" 
                                   CornerRadius="12" 
                                   Margin="0,4"
                                   Padding="16"
                                   BorderBrush="{ThemeResource OutlineVariantBrush}"
                                   BorderThickness="1">
                                <Grid RowDefinitions="Auto,Auto,Auto">
                                    <!-- Product Info -->
                                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock Text="{x:Bind ProductName}" 
                                                      FontSize="16"
                                                      FontWeight="SemiBold"
                                                      Foreground="{ThemeResource OnSurfaceBrush}"
                                                      TextWrapping="Wrap"/>
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <Border Background="{ThemeResource SecondaryContainerBrush}"
                                                       CornerRadius="4"
                                                       Padding="6,3">
                                                    <TextBlock Text="{x:Bind Barcode}" 
                                                              FontSize="11"
                                                              Foreground="{ThemeResource OnSecondaryContainerBrush}"/>
                                                </Border>
                                                <TextBlock Text="{x:Bind Unit}" 
                                                          FontSize="12"
                                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                          VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Padding="8"
                                               Command="{Binding DataContext.RemoveItemCommand, ElementName=PageRoot}"
                                               CommandParameter="{x:Bind}">
                                            <FontIcon Glyph="&#xE74D;" 
                                                     FontSize="18"
                                                     Foreground="{ThemeResource ErrorColor}"/>
                                        </Button>
                                    </Grid>

                                    <!-- Price and Quantity Controls -->
                                    <Grid Grid.Row="1" 
                                         ColumnDefinitions="*,Auto"
                                         Margin="0,12,0,0">
                                        <StackPanel Grid.Column="0" Spacing="2">
                                            <TextBlock Text="Đơn giá" 
                                                      FontSize="11"
                                                      Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                                            <TextBlock FontSize="16"
                                                      FontWeight="Bold"
                                                      Foreground="{ThemeResource PrimaryBrush}">
                                                <Run Text="{Binding Price, Converter={StaticResource PriceFormatConverter}}"/>
                                                <Run Text="đ" FontSize="12"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <Border Grid.Column="1"
                                               Background="{ThemeResource SurfaceVariantBrush}"
                                               CornerRadius="8"
                                               Padding="4">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <Button Background="Transparent"
                                                       BorderThickness="0"
                                                       Width="36"
                                                       Height="36"
                                                       Command="{Binding DataContext.DecreaseQuantityCommand, ElementName=PageRoot}"
                                                       CommandParameter="{x:Bind}">
                                                    <FontIcon Glyph="&#xE738;" FontSize="14"/>
                                                </Button>

                                                <Border Background="{ThemeResource SurfaceBrush}"
                                                       CornerRadius="4"
                                                       MinWidth="40"
                                                       Padding="8,0">
                                                    <TextBlock Text="{x:Bind Quantity, Mode=OneWay}" 
                                                              FontSize="16"
                                                              FontWeight="SemiBold"
                                                              Foreground="{ThemeResource OnSurfaceBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>

                                                <Button Background="Transparent"
                                                       BorderThickness="0"
                                                       Width="36"
                                                       Height="36"
                                                       Command="{Binding DataContext.IncreaseQuantityCommand, ElementName=PageRoot}"
                                                       CommandParameter="{x:Bind}">
                                                    <FontIcon Glyph="&#xE710;" FontSize="14"/>
                                                </Button>
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                    <!-- Subtotal -->
                                    <Border Grid.Row="2"
                                           Background="{ThemeResource TertiaryContainerBrush}"
                                           CornerRadius="8"
                                           Padding="12,8"
                                           Margin="0,12,0,0">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0"
                                                      Text="Thành tiền"
                                                      FontSize="13"
                                                      Foreground="{ThemeResource OnTertiaryContainerBrush}"
                                                      VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1"
                                                      FontSize="18"
                                                      FontWeight="Bold"
                                                      Foreground="{ThemeResource OnTertiaryContainerBrush}">
                                                <Run Text="{Binding Subtotal, Converter={StaticResource PriceFormatConverter}}"/>
                                                <Run Text="đ" FontSize="14"/>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Bar - Total and Checkout -->
        <Border Grid.Row="2" 
                Background="{ThemeResource SurfaceBrush}"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12"
                Visibility="{Binding IsEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="Tổng cộng" 
                              FontSize="14"
                              Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                    <TextBlock FontSize="24"
                              FontWeight="Bold"
                              Foreground="{ThemeResource PrimaryBrush}">
                        <Run Text="{Binding TotalAmount, Converter={StaticResource PriceFormatConverter}}"/>
                        <Run Text="đ" FontSize="18"/>
                    </TextBlock>
                </StackPanel>

                <Button Grid.Column="1"
                       Command="{Binding CheckoutCommand}"
                       Style="{ThemeResource AccentButtonStyle}"
                       FontSize="16"
                       Padding="32,12"
                       VerticalAlignment="Center">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8C8;" FontSize="18"/>
                            <TextBlock Text="Thanh toán" FontSize="16"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
