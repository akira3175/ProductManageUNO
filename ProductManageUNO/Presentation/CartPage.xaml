<Page
    x:Name="PageRoot"
    x:Class="ProductManageUNO.Presentation.CartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ProductManageUNO.Presentation"
    xmlns:models="using:ProductManageUNO.Models"
    xmlns:utu="using:Uno.Toolkit.UI"
    mc:Ignorable="d"
    Background="{ThemeResource BackgroundBrush}">

    <Grid RowDefinitions="Auto, *, Auto" utu:SafeArea.Insets="Top">
        <!-- Header -->
        <Grid Grid.Row="0" Background="{ThemeResource PrimaryBrush}" Padding="16,14,20,18" MinHeight="80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" 
                    Background="Transparent"
                    BorderThickness="0"
                    Click="BackButton_Click"
                    Padding="10"
                    CornerRadius="20"
                    ToolTipService.ToolTip="Quay lại">
                <SymbolIcon Symbol="Back" Foreground="{ThemeResource OnPrimaryBrush}"/>
            </Button>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="16,0,0,0" Spacing="4">
                <TextBlock Text="{Binding Title, FallbackValue='Giỏ Hàng'}" 
                          FontSize="26" 
                          FontWeight="Bold"
                          Foreground="{ThemeResource OnPrimaryBrush}"
                          CharacterSpacing="20"/>
                <TextBlock Text="{Binding TotalItemsFormatted, FallbackValue='0 sản phẩm'}"
                          FontSize="13"
                          Opacity="0.85"
                          Foreground="{ThemeResource OnPrimaryBrush}"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                <ProgressRing IsActive="{Binding IsLoading}" 
                              Width="26" 
                              Height="26"
                              Foreground="{ThemeResource OnPrimaryBrush}"/>

                <Button Click="ClearAllButton_Click"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10"
                        CornerRadius="20"
                        ToolTipService.ToolTip="Xóa tất cả">
                    <SymbolIcon Symbol="Delete" Foreground="{ThemeResource OnPrimaryBrush}"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Cart Items List -->
        <ScrollViewer Grid.Row="1" Padding="16,12">
            <StackPanel Spacing="16">
                <!-- Empty State -->
                <Grid Height="400" 
                      Visibility="{Binding CartEmpty}">
                    <StackPanel HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               Spacing="20">
                        <Border Background="{ThemeResource SurfaceVariantBrush}"
                                CornerRadius="50"
                                Width="100"
                                Height="100"
                                HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE7BF;" 
                                     FontSize="48" 
                                     Foreground="{ThemeResource OnSurfaceVariantBrush}" 
                                     Opacity="0.5"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Giỏ hàng trống" 
                                  FontSize="20"
                                  FontWeight="SemiBold"
                                  Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="Hãy thêm sản phẩm vào giỏ hàng" 
                                  FontSize="14"
                                  Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                  HorizontalAlignment="Center"
                                  Opacity="0.7"/>
                        <Button Content="Quay lại mua hàng" 
                               Click="BackButton_Click"
                               Style="{ThemeResource AccentButtonStyle}"
                               Padding="24,12"
                               Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Cart Items -->
                <ItemsControl x:Name="CartItemsList"
                      ItemsSource="{Binding CartItems}"
                      Tag="{Binding DataContext, ElementName=PageRoot}" 
                      Visibility="{Binding IsEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="models:CartItem">
                            <Border Background="{ThemeResource SurfaceBrush}" 
                                   CornerRadius="16" 
                                   Margin="0,6"
                                   Padding="18"
                                   BorderBrush="{ThemeResource OutlineVariantBrush}"
                                   BorderThickness="1">
                                <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="14">
                                    <!-- Product Info Row -->
                                    <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                        <StackPanel Grid.Column="0" Spacing="8">
                                            <TextBlock Text="{Binding ProductName}" 
                                                      FontSize="17"
                                                      FontWeight="SemiBold"
                                                      Foreground="{ThemeResource OnSurfaceBrush}"
                                                      TextWrapping="Wrap"
                                                      MaxLines="2"/>
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <Border Background="{ThemeResource SecondaryContainerBrush}"
                                                       CornerRadius="6"
                                                       Padding="8,4">
                                                    <TextBlock Text="{Binding Barcode}" 
                                                              FontSize="12"
                                                              Foreground="{ThemeResource OnSecondaryContainerBrush}"/>
                                                </Border>
                                                <TextBlock Text="{Binding Unit}" 
                                                          FontSize="13"
                                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"
                                                          VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Background="{ThemeResource ErrorContainerColor}"
                                                BorderThickness="0"
                                                Padding="10"
                                                CornerRadius="20"
                                                Tag="{Binding}"
                                                Click="RemoveItem_Click">
                                            <FontIcon Glyph="&#xE74D;" FontSize="16" Foreground="{ThemeResource ErrorColor}"/>
                                        </Button>
                                    </Grid>

                                    <!-- Price and Quantity Controls Row -->
                                    <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
                                        <StackPanel Grid.Column="0" Spacing="4">
                                            <TextBlock Text="Đơn giá" 
                                                      FontSize="12"
                                                      Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                                            <TextBlock FontSize="18"
                                                      FontWeight="Bold"
                                                      Foreground="{ThemeResource PrimaryBrush}">
                                                <Run Text="{Binding Price, Converter={StaticResource PriceFormatConverter}}"/>
                                                <Run Text="đ" FontSize="13"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <!-- Quantity Stepper -->
                                        <Border Grid.Column="1"
                                               Background="{ThemeResource SurfaceVariantBrush}"
                                               CornerRadius="12"
                                               Padding="4">
                                            <StackPanel Orientation="Horizontal" Spacing="4">
                                                <!-- Decrease Button -->
                                                <Border Background="{ThemeResource SurfaceBrush}"
                                                        CornerRadius="10"
                                                        Width="44"
                                                        Height="44"
                                                        Tag="{Binding}"
                                                        Tapped="DecreaseQuantity_Tapped">
                                                    <TextBlock Text="−"
                                                              FontSize="26"
                                                              FontWeight="Bold"
                                                              Foreground="{ThemeResource PrimaryBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Quantity Display -->
                                                <Border Background="{ThemeResource SurfaceBrush}"
                                                       CornerRadius="8"
                                                       MinWidth="48"
                                                       Padding="12,0">
                                                    <TextBlock Text="{Binding Quantity}" 
                                                              FontSize="17"
                                                              FontWeight="Bold"
                                                              Foreground="{ThemeResource OnSurfaceBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Increase Button -->
                                                <Border Background="{ThemeResource SurfaceBrush}"
                                                        CornerRadius="10"
                                                        Width="44"
                                                        Height="44"
                                                        Tag="{Binding}"
                                                        Tapped="IncreaseQuantity_Tapped">
                                                    <TextBlock Text="+"
                                                              FontSize="26"
                                                              FontWeight="Bold"
                                                              Foreground="{ThemeResource PrimaryBrush}"
                                                              HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                                </Border>
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                    <!-- Subtotal Row -->
                                    <Border Grid.Row="2"
                                           Background="{ThemeResource TertiaryContainerBrush}"
                                           CornerRadius="10"
                                           Padding="14,10">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <TextBlock Grid.Column="0"
                                                      Text="Thành tiền"
                                                      FontSize="14"
                                                      Foreground="{ThemeResource OnTertiaryContainerBrush}"
                                                      VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1"
                                                      FontSize="20"
                                                      FontWeight="Bold"
                                                      Foreground="{ThemeResource OnTertiaryContainerBrush}">
                                                <Run Text="{Binding Subtotal, Converter={StaticResource PriceFormatConverter}}"/>
                                                <Run Text="đ" FontSize="15"/>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Bar - Total and Checkout -->
        <Border Grid.Row="2" 
                Background="{ThemeResource SurfaceBrush}"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,16"
                Visibility="{Binding IsEmpty, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="20">
                <StackPanel Grid.Column="0" Spacing="4" VerticalAlignment="Center">
                    <TextBlock Text="Tổng cộng" 
                              FontSize="14"
                              Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                    <TextBlock x:Name="TotalAmountText"
                              Text="{Binding TotalAmountFormatted}"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="{ThemeResource PrimaryBrush}"/>
                </StackPanel>

                <Button Grid.Column="1"
                       Click="CheckoutButton_Click"
                       Style="{ThemeResource AccentButtonStyle}"
                       FontSize="16"
                       Padding="32,14"
                       CornerRadius="12"
                       VerticalAlignment="Center">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xE8C8;" FontSize="20"/>
                            <TextBlock Text="Thanh toán" FontSize="17" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>
