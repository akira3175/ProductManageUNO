<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ProductManageUNO.Presentation.CheckoutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProductManageUNO.Presentation"
    xmlns:utu="using:Uno.Toolkit.UI"
    x:Name="PageRoot"
    Background="{ThemeResource BackgroundBrush}">

    <Grid RowDefinitions="Auto,*,Auto" utu:SafeArea.Insets="Top">
        <!-- Header -->
        <Grid Grid.Row="0" 
              Background="{ThemeResource PrimaryBrush}"
              Padding="16,14,20,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    x:Name="BackButton"
                    Click="BackButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="10"
                    CornerRadius="20">
                <FontIcon Glyph="&#xE72B;" 
                         FontSize="20" 
                         Foreground="{ThemeResource OnPrimaryBrush}"/>
            </Button>

            <TextBlock Grid.Column="1"
                      Text="Thanh toán"
                      FontSize="24"
                      FontWeight="Bold"
                      Foreground="{ThemeResource OnPrimaryBrush}"
                      VerticalAlignment="Center"
                      Margin="16,0,0,0"
                      CharacterSpacing="20"/>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="16,20">
            <StackPanel Spacing="20">
                
                <!-- Error Message -->
                

                <!-- Customer Info Form -->
                <Border Background="{ThemeResource SurfaceBrush}"
                        CornerRadius="16"
                        Padding="20"
                        BorderBrush="{ThemeResource OutlineVariantBrush}"
                        BorderThickness="1">
                    <StackPanel Spacing="20">
                        <!-- Section Header -->
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xE77B;" FontSize="20" Foreground="{ThemeResource PrimaryBrush}"/>
                            <TextBlock Text="Thông tin khách hàng"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      Foreground="{ThemeResource OnSurfaceBrush}"/>
                        </StackPanel>

                        <!-- Name -->
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="Tên khách hàng"
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                                <TextBlock Text="*" Foreground="{ThemeResource ErrorColor}" FontSize="14"/>
                            </StackPanel>
                            <TextBox x:Name="NameTextBox"
                                    Text="{Binding CustomerName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="Nhập tên khách hàng"
                                    FontSize="16"
                                    Padding="14,12"
                                    CornerRadius="10"/>
                        </StackPanel>

                        <!-- Phone -->
                        <StackPanel Spacing="8">
                            <StackPanel Orientation="Horizontal" Spacing="4">
                                <TextBlock Text="Số điện thoại"
                                          FontSize="14"
                                          FontWeight="SemiBold"
                                          Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                                <TextBlock Text="*" Foreground="{ThemeResource ErrorColor}" FontSize="14"/>
                            </StackPanel>
                            <TextBox x:Name="PhoneTextBox"
                                    Text="{Binding CustomerPhone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="Nhập số điện thoại"
                                    InputScope="TelephoneNumber"
                                    FontSize="16"
                                    Padding="14,12"
                                    CornerRadius="10"/>
                        </StackPanel>

                        <!-- Email -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Email"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                            <TextBox x:Name="EmailTextBox"
                                    Text="{Binding CustomerEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="Nhập email (không bắt buộc)"
                                    InputScope="EmailNameOrAddress"
                                    FontSize="16"
                                    Padding="14,12"
                                    CornerRadius="10"/>
                        </StackPanel>

                        <!-- Address -->
                        <StackPanel Spacing="8">
                            <TextBlock Text="Địa chỉ giao hàng"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                            <TextBox x:Name="AddressTextBox"
                                    Text="{Binding CustomerAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    PlaceholderText="Nhập địa chỉ giao hàng"
                                    TextWrapping="Wrap"
                                    AcceptsReturn="True"
                                    Height="90"
                                    FontSize="16"
                                    Padding="14,12"
                                    CornerRadius="10"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Order Summary -->
                <Border Background="{ThemeResource SurfaceBrush}"
                        CornerRadius="16"
                        Padding="20"
                        BorderBrush="{ThemeResource OutlineVariantBrush}"
                        BorderThickness="1">
                    <StackPanel Spacing="16">
                        <!-- Section Header -->
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xE7BF;" FontSize="20" Foreground="{ThemeResource PrimaryBrush}"/>
                            <TextBlock Text="Đơn hàng của bạn"
                                      FontSize="20"
                                      FontWeight="SemiBold"
                                      Foreground="{ThemeResource OnSurfaceBrush}"/>
                        </StackPanel>

                        <!-- Cart Items -->
                        <ItemsControl x:Name="OrderItemsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource SurfaceVariantBrush}"
                                            CornerRadius="10"
                                            Padding="14,12"
                                            Margin="0,4">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <StackPanel Grid.Column="0" Spacing="4">
                                                <TextBlock Text="{Binding ProductName}"
                                                          FontSize="15"
                                                          FontWeight="SemiBold"
                                                          Foreground="{ThemeResource OnSurfaceBrush}"
                                                          TextTrimming="CharacterEllipsis"
                                                          MaxLines="1"/>
                                                <StackPanel Orientation="Horizontal" Spacing="4">
                                                    <TextBlock Text="{Binding Quantity}"
                                                              FontSize="13"
                                                              Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                                                    <TextBlock Text="×"
                                                              FontSize="13"
                                                              Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                                                    <TextBlock Text="{Binding PriceFormatted}"
                                                              FontSize="13"
                                                              Foreground="{ThemeResource OnSurfaceVariantBrush}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1"
                                                      Text="{Binding SubtotalFormatted}"
                                                      FontSize="15"
                                                      FontWeight="Bold"
                                                      Foreground="{ThemeResource PrimaryBrush}"
                                                      VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Border Height="1" Background="{ThemeResource OutlineVariantBrush}" Margin="0,4"/>

                        <!-- Total -->
                        <Grid ColumnDefinitions="*,Auto" Margin="0,4">
                            <TextBlock Grid.Column="0"
                                      Text="Tổng cộng"
                                      FontSize="18"
                                      FontWeight="SemiBold"
                                      Foreground="{ThemeResource OnSurfaceBrush}"
                                      VerticalAlignment="Center"/>
                            <TextBlock x:Name="TotalAmountText"
                                      Grid.Column="1"
                                      Text="0đ"
                                      FontSize="24"
                                      FontWeight="Bold"
                                      Foreground="{ThemeResource PrimaryBrush}"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Button -->
        <Border Grid.Row="2" 
                Background="{ThemeResource SurfaceBrush}"
                BorderBrush="{ThemeResource OutlineVariantBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,16">
            <Button x:Name="PlaceOrderButton"
                   Click="PlaceOrderButton_Click"
                   HorizontalAlignment="Stretch"
                   Style="{ThemeResource AccentButtonStyle}"
                   FontSize="17"
                   Padding="16,14"
                   CornerRadius="12">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon Glyph="&#xE73E;" FontSize="20"/>
                    <TextBlock Text="Đặt hàng" FontSize="17" FontWeight="SemiBold"/>
                </StackPanel>
            </Button>
        </Border>

        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay"
              Grid.RowSpan="3"
              Background="#99000000"
              Visibility="Collapsed">
            <Border Background="{ThemeResource SurfaceBrush}"
                    CornerRadius="20"
                    Padding="40,32"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Spacing="16">
                    <ProgressRing IsActive="True" Width="48" Height="48"/>
                    <TextBlock Text="Đang xử lý đơn hàng..." 
                              FontSize="16"
                              FontWeight="SemiBold"
                              Foreground="{ThemeResource OnSurfaceBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
